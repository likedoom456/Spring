<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="user">
    <insert id="create" parameterType="model.User" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO db_test.user VALUES (NULL, #{email}, #{password})
    </insert>
    <select id="login" parameterType="model.User" resultType="model.User">
        SELECT * FROM db_test.user WHERE email = #{email} AND password = #{password}
    </select>
</mapper>